# News Crawler Service Environment Variables
# Copy this file to .env and update with your actual values

# Tavily API Configuration
TAVILY_API_KEY=your_tavily_api_key_here

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=news_crawler

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Service Configuration
DEBUG=false
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# Cron Job Configuration
CRON_JOB_ENABLED=true
CRON_JOB_SCHEDULE="0 */1 * * *"
CRON_JOB_MAX_ITEMS_PER_SOURCE=100
CRON_JOB_SOURCES=["coindesk", "cointelegraph"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/

# Cache Configuration
ENABLE_CACHING=true
CACHE_TTL_SECONDS=300

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Crawler Configuration
ENABLE_ADVANCED_CRAWLING=true
MAX_CONCURRENT_CRAWLS=10
CRAWL_TIMEOUT=30
CRAWL_RETRY_ATTEMPTS=3
