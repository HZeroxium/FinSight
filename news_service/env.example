# =============================================================================
# NEWS SERVICE CONFIGURATION
# =============================================================================

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
# Tên ứng dụng
APP_NAME=news-crawler-service

# Chế độ debug (true/false)
DEBUG=false

# Môi trường hoạt động (development/staging/production)
ENVIRONMENT=development

# Host binding cho service
HOST=0.0.0.0

# Port cho service HTTP
PORT=8000

# =============================================================================
# GRPC CONFIGURATION
# =============================================================================
# Bật/tắt gRPC server
ENABLE_GRPC=true

# Host cho gRPC server
GRPC_HOST=0.0.0.0

# Port cho gRPC server
GRPC_PORT=50051

# Số lượng worker tối đa cho gRPC
GRPC_MAX_WORKERS=10

# Kích thước message tối đa có thể nhận (bytes)
GRPC_MAX_RECEIVE_MESSAGE_LENGTH=4194304

# Kích thước message tối đa có thể gửi (bytes)
GRPC_MAX_SEND_MESSAGE_LENGTH=4194304

# =============================================================================
# EUREKA CLIENT CONFIGURATION
# =============================================================================
# Bật/tắt Eureka client registration
ENABLE_EUREKA_CLIENT=true

# URL của Eureka server
EUREKA_SERVER_URL=http://localhost:8761

# Tên ứng dụng trong Eureka
EUREKA_APP_NAME=news-service

# Instance ID cho Eureka (để tránh trùng lặp)
EUREKA_INSTANCE_ID=

# Host name cho Eureka registration
EUREKA_HOST_NAME=

# IP address cho Eureka registration
EUREKA_IP_ADDRESS=

# Port cho Eureka registration
EUREKA_PORT=8000

# Secure port cho Eureka registration
EUREKA_SECURE_PORT=8443

# Bật/tắt secure port
EUREKA_SECURE_PORT_ENABLED=false

# Home page URL cho Eureka
EUREKA_HOME_PAGE_URL=

# Status page URL cho Eureka
EUREKA_STATUS_PAGE_URL=

# Health check URL cho Eureka
EUREKA_HEALTH_CHECK_URL=

# VIP address cho Eureka
EUREKA_VIP_ADDRESS=

# Secure VIP address cho Eureka
EUREKA_SECURE_VIP_ADDRESS=

# Ưu tiên IP address thay vì hostname
EUREKA_PREFER_IP_ADDRESS=true

# =============================================================================
# EUREKA TIMING CONFIGURATION
# =============================================================================
# Khoảng thời gian gia hạn lease (giây)
EUREKA_LEASE_RENEWAL_INTERVAL_IN_SECONDS=30

# Thời gian hết hạn lease (giây)
EUREKA_LEASE_EXPIRATION_DURATION_IN_SECONDS=90

# Khoảng thời gian fetch registry (giây)
EUREKA_REGISTRY_FETCH_INTERVAL_SECONDS=30

# Khoảng thời gian replicate instance info (giây)
EUREKA_INSTANCE_INFO_REPLICATION_INTERVAL_SECONDS=30

# Khoảng thời gian replicate ban đầu (giây)
EUREKA_INITIAL_INSTANCE_INFO_REPLICATION_INTERVAL_SECONDS=40

# Khoảng thời gian heartbeat (giây)
EUREKA_HEARTBEAT_INTERVAL_SECONDS=30

# =============================================================================
# EUREKA RETRY CONFIGURATION
# =============================================================================
# Số lần thử đăng ký lại
EUREKA_REGISTRATION_RETRY_ATTEMPTS=3

# Delay giữa các lần thử đăng ký (giây)
EUREKA_REGISTRATION_RETRY_DELAY_SECONDS=5

# Số lần thử heartbeat lại
EUREKA_HEARTBEAT_RETRY_ATTEMPTS=3

# Delay giữa các lần thử heartbeat (giây)
EUREKA_HEARTBEAT_RETRY_DELAY_SECONDS=2

# Hệ số tăng delay (exponential backoff)
EUREKA_RETRY_BACKOFF_MULTIPLIER=2.0

# Delay tối đa giữa các lần thử (giây)
EUREKA_MAX_RETRY_DELAY_SECONDS=60

# Bật/tắt tự động đăng ký lại
EUREKA_ENABLE_AUTO_RE_REGISTRATION=true

# Delay trước khi đăng ký lại (giây)
EUREKA_RE_REGISTRATION_DELAY_SECONDS=10

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================
# API key cho Tavily search engine
TAVILY_API_KEY=

# Secret API key cho admin endpoints
SECRET_API_KEY=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Môi trường database (local/cloud)
DATABASE_ENVIRONMENT=local

# MongoDB local connection string
MONGODB_LOCAL_URL=mongodb://localhost:27017

# Tên database local
MONGODB_LOCAL_DATABASE=finsight_coindesk_news

# MongoDB cloud connection string (Atlas)
MONGODB_CLOUD_URL=

# Tên database cloud
MONGODB_CLOUD_DATABASE=finsight_news

# Tên collection cho news items
MONGODB_COLLECTION_NEWS=news_items

# =============================================================================
# MONGODB CONNECTION OPTIONS
# =============================================================================
# Connection timeout (milliseconds)
MONGODB_CONNECTION_TIMEOUT=10000

# Server selection timeout (milliseconds)
MONGODB_SERVER_SELECTION_TIMEOUT=5000

# Kích thước connection pool tối đa
MONGODB_MAX_POOL_SIZE=10

# Kích thước connection pool tối thiểu
MONGODB_MIN_POOL_SIZE=1

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
# RabbitMQ connection URL
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Exchange cho articles
RABBITMQ_ARTICLE_EXCHANGE=news_crawler_exchange

# Exchange cho analytics
RABBITMQ_ANALYTICS_EXCHANGE=analytics_exchange

# Queue cho raw articles
RABBITMQ_QUEUE_RAW_ARTICLES=raw_articles_queue

# Queue cho processed sentiments
RABBITMQ_QUEUE_PROCESSED_SENTIMENTS=processed_sentiments_queue

# Routing key cho article sentiment
RABBITMQ_ROUTING_KEY_ARTICLE_SENTIMENT=article.sentiment_analysis

# Routing key cho sentiment processed
RABBITMQ_ROUTING_KEY_SENTIMENT_PROCESSED=sentiment.processed

# Routing key cho search events
RABBITMQ_ROUTING_KEY_SEARCH_EVENT=search.event

# =============================================================================
# CRAWLER CONFIGURATION
# =============================================================================
# Bật/tắt advanced crawling
ENABLE_ADVANCED_CRAWLING=true

# Số lượng crawl đồng thời tối đa
MAX_CONCURRENT_CRAWLS=10

# Timeout cho crawl operations (giây)
CRAWL_TIMEOUT=30

# Số lần thử lại khi crawl thất bại
CRAWL_RETRY_ATTEMPTS=3

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Bật/tắt caching
ENABLE_CACHING=true

# Thời gian sống của cache (giây)
CACHE_TTL_SECONDS=300

# =============================================================================
# RATE LIMITING
# =============================================================================
# Số request tối đa mỗi phút
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# =============================================================================
# CRON JOB CONFIGURATION
# =============================================================================
# Bật/tắt cron job
CRON_JOB_ENABLED=true

# Lịch trình cron job (mỗi giờ)
CRON_JOB_SCHEDULE=0 */1 * * *

# Số items tối đa mỗi source
CRON_JOB_MAX_ITEMS_PER_SOURCE=100

# Danh sách sources cho cron job
CRON_JOB_SOURCES=coindesk,cointelegraph

# File config cho cron job
CRON_JOB_CONFIG_FILE=news_crawler_config.json

# File PID cho cron job
CRON_JOB_PID_FILE=news_crawler_job.pid

# File log cho cron job
CRON_JOB_LOG_FILE=logs/news_crawler_job.log

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Level logging (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL=INFO

# Đường dẫn file log
LOG_FILE_PATH=logs/

# Bật/tắt structured logging
ENABLE_STRUCTURED_LOGGING=true